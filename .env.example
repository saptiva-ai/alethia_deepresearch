# ========================================
# Aletheia Deep Research - Environment Variables
# Minimalist Configuration
# ========================================
# Copy this file to .env and fill in your values

# === REQUIRED: API Keys ===
# Get your keys from:
# - Saptiva: https://saptiva.ai
# - Tavily: https://tavily.com

SAPTIVA_API_KEY=your_saptiva_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# === Saptiva Configuration ===
# Optional - adjust base URL if different
SAPTIVA_BASE_URL=https://api.saptiva.ai/v1

# Optional - model selection (defaults provided)
SAPTIVA_MODEL_PLANNER=SAPTIVA_OPS
SAPTIVA_MODEL_WRITER=SAPTIVA_CORTEX
SAPTIVA_MODEL_RESEARCHER=SAPTIVA_OPS

# === Vector Storage ===
# Set to 'none' for minimal setup (recommended)
# Set to 'weaviate' only if you're running Weaviate
VECTOR_BACKEND=none

# === Application Settings ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# === API Server ===
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ========================================
# Optional Configuration
# ========================================
# Uncomment only if needed

# === Weaviate (if VECTOR_BACKEND=weaviate) ===
# WEAVIATE_HOST=http://localhost:8080
# WEAVIATE_API_KEY=

# === OpenTelemetry (if using Jaeger) ===
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# === Production Settings ===
# Use these when deploying to production:
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# API_RELOAD=false

# === Storage ===
# ARTIFACTS_DIR=./runs

# === Advanced ===
# SAPTIVA_CONNECT_TIMEOUT=15
# SAPTIVA_READ_TIMEOUT=90