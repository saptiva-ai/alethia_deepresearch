{
  "dashboard": {
    "id": null,
    "title": "Aletheia Deep Research - Overview",
    "tags": ["aletheia", "deep-research"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Research Tasks per Hour",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(research_tasks_total[1h])",
            "legendFormat": "Tasks/hour"
          }
        ],
        "yAxes": [
          {
            "label": "Tasks"
          }
        ],
        "xAxes": [
          {
            "type": "time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Average Research Duration",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(research_duration_seconds)",
            "legendFormat": "Avg Duration"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Evidence Collection Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(evidence_collected_total[5m])",
            "legendFormat": "Evidence/min"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "API Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "System Health",
        "type": "table",
        "targets": [
          {
            "expr": "up",
            "legendFormat": "{{ job }}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}